<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blur"
    android:padding="20dp">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Bookings"
            android:textColor="#FAAD01"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Your event tickets"
            android:textColor="#F8DD7F"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Back Button -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/back"
        android:contentDescription="Back"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:focusable="true"/>


    <!-- Bookings Card Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"

        android:padding="16dp"
        android:orientation="vertical">

        <!-- No Bookings Message -->
        <TextView
            android:id="@+id/tvNoBookings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="No bookings found\n\nBook your first event!"
            android:textColor="#000000"
            android:textSize="16sp"
            android:visibility="gone"
            android:padding="16dp" />

        <!-- Bookings List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvBookings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />

    </LinearLayout>

</RelativeLayout>